{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": false,
    "outDir": "build",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx", 
    "server.ts",
    "server"
  ],
  "exclude": [
    "node_modules",
    "webpack.config.server.js"
  ]
}